<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="16sp"
            android:paddingHorizontal="25sp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="9:41"/>
        <ImageView
            android:id="@+id/signal_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/battery_icon"
            android:src="@drawable/baseline_signal_cellular_alt_24"
            android:paddingRight="5sp"
            android:layout_toLeftOf="@id/wifi_icon"/>

        <ImageView
            android:id="@+id/wifi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/battery_icon"
            android:src="@drawable/baseline_wifi_24"
            android:paddingRight="5sp"
            android:layout_toLeftOf="@id/battery_icon"/>

        <ImageView
            android:id="@+id/battery_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="16sp"
            android:rotation="90"
            android:layout_marginRight="25sp"
            android:src="@drawable/baseline_battery_6_bar_24" />
</RelativeLayout>